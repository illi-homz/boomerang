{% extends 'layouts/Base.jinja' %}

{% block head %}
<title>{{title}} | {{titleDesc}}</title>
{% endblock %}

{% block scripts %}
<script src="https://api-maps.yandex.ru/2.1/?lang=ru_RU" type="text/javascript"></script>
{% endblock %}

{% block content %}
<div class="contacts container">
    {% include 'components/bread-crumbs/bread-crumbs.jinja' %}
    <div class="g-block__title">{{title}}</div>
    <div class="contacts__wrapper">
        <div class="contacts__data">
            <div class="contacts__field contacts__field--line">
                <div class="contacts__title">{{phonesTitle}}:&nbsp;</div>
                <div class="contacts__text">
                    {% for t in phones %}
                    <pre style="display: inline;"><a href="tel:{{t.phone}}">{{t.title}}</pre></a>
                    {% endfor %}
                </div>
            </div>
            <div class="contacts__field">
                <div class="contacts__title">{{addressTitle}}:</div>
                <div class="contacts__text">{{address}}</div>
            </div>
            <div class="contacts__field contacts__field--line">
                <div class="contacts__title">E-mails:</div>
                <div class="contacts__text">
                    {% for item in emails %}
                    <a href="mailto:{{item.email}}">{{item.title}}</a>
                    {% endfor %}
                </div>
            </div>
            <div class="contacts__field contacts__field--line">
                <div class="contacts__title">{{vkTitle}}:&nbsp;</div>
                <div class="contacts__text">
                    <a href="https://{{vk}}" target="_blank">{{vk}}</a>
                </div>
            </div>
        </div>

        <div class="contacts__map" id="yamap"></div>
    </div>
</div>
{% endblock %}
