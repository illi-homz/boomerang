<section class="index-banner">
    <div class="index-banner__bg">
        <picture>
            <source data-srcset="{{ banner.bg }}.webp" srcset="#" type="image/webp">
            <img class="g-img-bg" data-src="{{ banner.bg }}.jpg" src="#" alt="" />
        </picture>
    </div>

    <div class="container">
        <div class="index-banner__wrap">
            <h1 class="index-banner__title">{{ banner.title|safe }}</h1>
            <div class="index-banner__gotoblock" onclick="gz.goToBlock('#index-about')">
                {% include '#img/arrow-empty-d.svg' %}
            </div>
        </div>
        <ul class="index-banner__list">
            {% for el in banner.data %}
            <li>
                <div class="index-banner__count">{{ el.count|safe }}</div>
                <div class="index-banner__text">{{ el.text|safe }}</div>
            </li>
            {% endfor %}
        </ul>
    </div>

</section>
