{% extends 'layouts/Base.jinja' %}

{% block content %}

    <div class="news-detail">
        <div class="container">
            {% include 'components/bread-crumbs/bread-crumbs.jinja' %}
            <div class="news-detail__item">
                <div class="news-detail__date">{{new.date|date:"d E Y"}} г.</div>
                <h1 class="news-detail__title">{{new.title}}</h1>
                <div class="news-detail__wrapper">
                    <div class="news-detail__text">{{new.text|safe}}</div>
                    <div class="news-detail__img">
                        <img src="{{new.img.url}}" alt="">
                    </div>
                </div>
            </div>
        </div>
        <div class="news-detail__read-same">
            <div class="container">
                <div class="g-block__title">{{readSame}}</div>
                <div class="news-detail__slider _news-detail__slider g-slider">
                    {% for n in news %}
                        <div class="news-detail__slide g-news">
                            <div class="g-news__item-title">
                                <a href="/news/{{n.id}}">{{n.title}}</a>
                            </div>
                            <div class="g-news__item-desc">{{n.desc}}</div>
                            <div class="g-news__item-df-jcsb">
                                <div class="g-news__item-date">{{n.date|date:"d E"}}</div>
                                <a href="/news/{{n.id}}" class="g-news__item-detail">Подробнее</a>
                            </div>
                            <div class="g-news__item-img">
                                <a href="/news/{{n.id}}">
                                    <img src="{{ n.img.url }}" alt="img">
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
